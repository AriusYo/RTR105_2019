#include<stdio.h>

void main()
{
		//int vietā bija char darbojās

int a = 10; //0000 0000 0000 0000 0000 0000 0000 1010
printf("operācija <<: %d<<1 rezultāts %d\n", a, a<<1);//ko??? jābūt 20??

int b; //parādīsies mainīgais b 4 byte
printf("B mainīgā sākuma stāvoklis(uzreiz pec deklaresanas): %d\n", b);

b=a<<2; //2 operācijas piešķiršana un bīdīšana bpa bitiem pa kreisi
printf("operācijas <<: %d<<2 rezultāts %d\n", a, a<<2);

int c; //pagaidām nekas
printf("Papētīsim << operāciju\n----------------------------\n");
printf("Cienījamais lietotāj, lūdzu ievadi operācijas 1. operandu: ");
scanf("%d", &a);
printf("Cienījamais lietotāj, lūdzu ievadi operācijas 2. operantu: ");
scanf("%d", &c);
b=a<<c;
printf("------------------------------------\nSkaties, kas ir sanācis: %d\n",b);

}

